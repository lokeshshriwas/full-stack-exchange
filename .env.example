# ============================================
# Exchange Platform Environment Configuration
# ============================================
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control!

# ============================================
# Database Configuration (TimescaleDB/PostgreSQL)
# ============================================
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_DB=exchange-platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# API Server Configuration
# ============================================
API_PORT=8080
# External API for market data proxy (Backpack Exchange)
TARGET_URL=https://api.backpack.exchange

# ============================================
# WebSocket Server Configuration
# ============================================
WS_PORT=3001

# ============================================
# Authentication Secrets
# ============================================
# IMPORTANT: Change these in production!
JWT_SECRET=password_password
REFRESH_SECRET=refresh_secret_password

# ============================================
# Frontend Configuration (Next.js)
# ============================================
# These must be prefixed with NEXT_PUBLIC_ to be available client-side
# For local development with services running locally:
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# For Docker deployment (services communicate via container names):
# NEXT_PUBLIC_API_URL=http://api:8080
# NEXT_PUBLIC_WS_URL=ws://ws:3001

# ============================================
# Engine Configuration
# ============================================
# URL for engine to fetch initial market data
ENGINE_API_URL=http://api:8080
# Set to "true" to load orderbook from snapshot on startup
WITH_SNAPSHOT=false

# ============================================
# Environment
# ============================================
NODE_ENV=development
